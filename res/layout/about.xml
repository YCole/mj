<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:background="#FFF5F8FA"
    tools:context="cole.fragments.MineFragment">

    <include layout="@layout/common_titlebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-98dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/avatar_layout"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/bg_card"
            android:layout_marginRight="@dimen/bg_card_margin"
            android:layout_marginLeft="@dimen/bg_card_margin"
            android:orientation="vertical">

            <TextView
                android:text="version"
                android:id="@+id/myolv_edit_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="106dp"
                android:gravity="center"
                android:textColor="#73000000"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_mine_fragment_icon"
        android:src="@drawable/logo_small"
        android:contentDescription="@string/content_description_contact_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="-215dp"
        android:layout_gravity="center" />

    <cole.view.MyOneLineView
        android:id="@+id/account"
        android:background="@drawable/bg_card"
        android:layout_marginTop="74dp"
        android:layout_marginRight="@dimen/bg_card_margin"
        android:layout_marginLeft="@dimen/bg_card_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
