<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:background="#FFF5F8FA"
    tools:context="cole.fragments.MineFragment">

    <include layout="@layout/common_titlebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-98dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/avatar_layout"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/bg_card"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="101dp"
                android:gravity="center"
                android:text="@string/my_device"
                android:textColor="#99000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/bound_device"
                android:text="@string/bound_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#4D000000"
                android:textSize="13sp"/>

        </LinearLayout>

    </LinearLayout>

    <com.gome.beautymirror.ui.RoundImageView
        android:id="@+id/bind_device_icon"
        android:background="@drawable/image_mymirror_connect"
        android:layout_width="131dp"
        android:layout_height="131dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="-230dp"
        imagecontrol:border_width="2dp"
        imagecontrol:border_inside_color="@color/white"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/ll_bind_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="103dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <cole.view.MyOneLineView
                android:id="@+id/reset_device_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:background="@color/divider_line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginLeft="17dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:orientation="vertical">

                    <TextView
                        android:text="@string/sync_gallery_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        style="@style/contact_name_font"/>
                    <TextView
                        android:text="@string/sync_gallery_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#73000000"/>

                </LinearLayout>

                <Switch
                    android:id="@+id/sync_gallery"
                    android:layout_width="44dp"
                    android:layout_height="24dp"
                    android:showText="false"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="17dp"
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track"
                    />


            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_unbind_device"
            android:layout_marginTop="53dp"
            android:background="@drawable/bg_button_delete_contact"
            android:text="@string/unbind_device"
            android:textColor="#FFEB4E70"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_bind_device"
        android:background="@drawable/bg_button_bind_device"
        android:text="@string/bind_device"
        android:textColor="#FFFFFFFF"
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="146dp"
        android:gravity="center" />




</LinearLayout>
