<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_new_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp">

        <RelativeLayout
            android:id="@+id/rl_newfrend_picture"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp">

            <com.gome.beautymirror.ui.RoundImageView
                android:id="@+id/newfrend_picture"
                android:src="@drawable/image_newfrend"
                android:contentDescription="@string/content_description_contact_picture"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                imagecontrol:border_width="3px"
                imagecontrol:border_inside_color="@color/small_avatar_inside_color" />

            <ImageView
                android:id="@+id/badge_noread_new_friend"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/badge_missed_new_friend"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_newfrend_picture"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/tv_new_request_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/contact_name_font"
                android:text="@string/contact_new_friend" />

            <TextView
                android:id="@+id/tv_new_request_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_new_request_title"
                style="@style/contact_account_font"
                android:text="@string/contact_add_phone_contact_friend" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_icon_more" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#FFF5F8FA"/>

    <RelativeLayout
        android:id="@+id/rl_my_device"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <com.gome.beautymirror.ui.RoundImageView
            android:id="@+id/device_picture"
            android:src="@drawable/image_head"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:adjustViewBounds="true"
            android:layout_marginLeft="20dp"
            imagecontrol:border_width="3px"
            imagecontrol:border_inside_color="@color/small_avatar_inside_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/device_picture"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/my_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/contact_name_font"
                android:text="@string/my_device" />

            <TextView
                android:id="@+id/my_device_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_device"
                style="@style/contact_account_font" />

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_icon_videocall" />
    </RelativeLayout>

</LinearLayout>