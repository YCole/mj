<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
                android:id="@+id/topLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/call_default_bg">

    <SurfaceView
        android:id="@+id/videoCaptureSurface"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:background="#59000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/contact_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/menu">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.gome.beautymirror.ui.RoundImageView
                android:id="@+id/contact_picture"
                android:src="@drawable/image_head"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:adjustViewBounds="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="16dp"
                imagecontrol:border_width="1dp"
                imagecontrol:border_inside_color="#FFFFFFFF" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/contact_name"
                    style="@style/call_number_font"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/incoming_call"
                    style="@style/call_message_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/contact_number"
                    style="@style/font2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contact_name"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="10dp"/>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/to_audio_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/menu"
        android:gravity="center">
        <ImageView
            android:id="@+id/to_audio"
            android:src="@drawable/ic_turntovoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:text="切到语音接听"
            style="@style/call_status_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:paddingRight="60dp"
        android:orientation="horizontal" >


        <LinearLayout
            android:id="@+id/decline_call"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/outgoing_hang_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/decline"
                        android:background="@drawable/bg_hang_up"
                        android:contentDescription="@string/content_description_decline"
                        android:layout_width="65dp"
                        android:layout_height="65dp" />

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_hanpup"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </FrameLayout>

                <TextView
                    android:text="@string/content_description_hang_up"
                    style="@style/call_status_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/accept_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/accept"
                    android:background="@drawable/bg_decline_call"
                    android:contentDescription="@string/content_description_accept"
                    android:layout_width="65dp"
                    android:layout_height="65dp" />

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_turntovideo"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

            </FrameLayout>
            <TextView
                android:text="@string/content_description_accept"
                style="@style/call_status_font"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
