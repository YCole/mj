<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="16dp"
                android:fontFamily="FZLTHK--GBK1-0"
                android:text="@string/beauty_mirror"
                android:textColor="#FFFFFFFF"
                android:textSize="22dp" />

        </LinearLayout>

    </LinearLayout>

    <com.gome.beautymirror.advertisement.BannerLayout
        android:id="@+id/banner2"
        android:layout_width="338dp"
        android:layout_height="334dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="-160dp"
        android:layout_marginBottom="11dp"
        app:autoPlayDuration="3000"
        app:indicatorMargin="10dp"
        app:indicatorMarginBottom="20dp"
        app:indicatorMarginRight="20dp"
        app:indicatorPosition="rightBottom"
        app:indicatorShape="oval"
        app:indicatorSpace="3dp"
        app:scrollDuration="1000"
        app:selectedIndicatorColor="#ffffff"
        app:selectedIndicatorHeight="5dp"
        app:selectedIndicatorWidth="5dp"
        app:unSelectedIndicatorColor="#5EF4F4F4"
        app:unSelectedIndicatorHeight="5dp"
        app:unSelectedIndicatorWidth="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="9dp"
        android:fontFamily="FZLTHK--GBK1-0"
        android:text="@string/beauty_mirror_gallery"
        android:textColor="#E6000000"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/photo_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/photo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.5dp"
            android:orientation="horizontal" />

        <FrameLayout
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_marginLeft="5dp">

            <com.gome.beautymirror.gallery.FilletImageView
                xmlns:chen="http://schemas.android.com/apk/res/com.gome.beautymirror"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:src="@drawable/default_more_bg"
                android:scaleType="fitXY"
                chen:angle="10" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="FZLTHK--GBK1-0"
                android:text="@string/get_more"
                android:textColor="#FFFDA3C7"
                android:textSize="10sp" />

        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/photo_null_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/empty_nophoto" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="FZLTHK--GBK1-0"
            android:text="@string/null_photo_remind"
            android:textColor="#33000000"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
