<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cole.view.MyActionBar
        android:id="@+id/actionbar_resetpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">


        <TextView
            android:id="@+id/tv_reset_password_phone"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginTop="30dp"
            android:gravity="center|start"
            android:text="@string/to_phone_send_code" />

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_getCodeNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/phone_number"
                android:layout_centerInParent="true"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/et_reset_codeNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/botton_white_rectangle_background"
                    android:gravity="center"
                    android:hint="@string/et_register_getcode"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/bt_reset_getCodeNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:background="@drawable/botton_orange_rectangle_background"
                    android:gravity="center"
                    android:text="@string/bt_register_getcode" />

            </LinearLayout>

            <cole.view.ClearEditText

                android:id="@+id/et_reset_input_newpassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/botton_white_rectangle_background"
                android:gravity="center"
                android:hint="@string/et_set_new_password"
                android:maxLength="16"
                android:maxLines="1"
                android:singleLine="true" />


            <Button
                android:id="@+id/bt_reset_password_finish"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/botton_white_rectangle_background"
                android:gravity="center"
                android:text="@string/finish" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>