<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF5F8FA">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <include layout="@layout/common_titlebar"/>

        <LinearLayout
            android:id="@+id/avatar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_marginTop="-160dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reset_avatar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="头像"
                android:layout_marginLeft="17dp"
                android:gravity="center_vertical"
                style="@style/contact_name_font"/>

            <com.gome.beautymirror.ui.RoundImageView
                android:id="@+id/mine_avatar_icon"
                android:background="@drawable/image_head"
                android:contentDescription="@string/content_description_contact_picture"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:adjustViewBounds="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                imagecontrol:border_width="3px"
                imagecontrol:border_inside_color="@color/small_avatar_inside_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icon_more"
                android:layout_marginRight="17dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <cole.view.MyOneLineView
                android:id="@+id/nick_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <cole.view.MyOneLineView
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <cole.view.MyOneLineView
            android:id="@+id/reset_password"
            android:background="@drawable/bg_card"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_gravity="bottom"
        android:layout_marginBottom="42dp"
        android:background="@drawable/bg_button_delete_contact"
        android:text="@string/logout"
        android:textColor="#FFEB4E70"
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center" />


</LinearLayout>
