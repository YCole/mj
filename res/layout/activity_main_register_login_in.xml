<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/image_logo" />

    <LinearLayout

        android:background="@color/transparent"
        android:id="@+id/ll_register_login_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:gravity="center"
        android:paddingRight="50dp">

        <Button
            android:layout_marginRight="30dp"
            android:id="@+id/botton_main_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/botton_orange_rectangle_background"
            android:text="@string/login" />

        <Button
            android:layout_marginLeft="30dp"
            android:id="@+id/botton_main_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/botton_orange_rectangle_background"
            android:text="@string/register" />
    </LinearLayout>


</RelativeLayout>

